<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/emoji_variant_popup_bg1" />
            <corners android:radius="@dimen/emoji_popup_radius" />
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/emoji_variant_popup_bg2" />
            <corners android:radius="@dimen/emoji_popup_radius" />
        </shape>
    </item>
    <!-- Background Color -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/emoji_variant_popup_bg3" />
            <corners android:radius="@dimen/emoji_popup_radius" />
        </shape>
    </item>
</layer-list>